{
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:node/recommended",
    "plugin:jest/recommended"
  ],
  "globals": {},
  "plugins": ["jest"],
  "rules": {
    "no-console": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "ecmaFeatures": {},
    "env": {
      "amd": true,
      "node": true,
      "commonjs": true,
      "jest/globals": true
    }
  },
  "overrides": [
    {
      "files": "**/*.spec.js",
      "rules": {
        "node/no-unpublished-require": 0,
        "node/no-missing-require": 0
      }
    }
  ]
}
